<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-md-6 offset-2 offset-md-3">Login</h1>
    <div class="col-md-6 offset-2 offset-md-3">

        <form action="/login" method="post" novalidate class="needs-validation">

            <div class="mb-3">
                <label for="username" class="form-label mt-3">Username </label>
                <input name="username" type="text" class="form-control" id="username" required>
                
            </div>

           

            <div class="mb-3">
                <label for="password" class="form-label mt-3">Password </label>
                <input name="password" type="password" class="form-control" id="password" required>
            </div>
            <button class="btn btn-success">Login</button>

        </form>


    </div>
</div>